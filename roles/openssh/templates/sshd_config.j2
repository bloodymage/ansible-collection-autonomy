# {{ ansible_managed }}

{# =================================================================================================
#
# This is the sshd server system-wide configuration file.  See
# sshd_config(5) for more information.
#
# This sshd was compiled with PATH=/usr/bin:/bin:/usr/sbin:/sbin
#
# The strategy used for options in the default sshd_config shipped with
# OpenSSH is to specify options with their default value where
# possible, but leave them commented.  Uncommented options override the
# default value.
#
# ================================================================================================== #}
Port "{{ ssh_port }}"
AddressFamily "{{ ssh_addrfamily }}"
#ListenAddress {{ ssh_listen_ipv4 }}
#ListenAddress {{ ssh_listen_ipv6 }}

HostKey {{ ssh_host_key }}
HostCertificate  {{ ssh_host_certificate }}

# Ciphers and keying
#RekeyLimit default none

{# Logging #}
#SyslogFacility AUTH
#LogLevel INFO

{# Authentication #}
#LoginGraceTime 2m
PermitRootLogin {{ ssh_permit_root_login }}
#StrictModes yes
#MaxAuthTries 6
#MaxSessions 10
#PubkeyAuthentication yes
AuthorizedPrincipalsFile /etc/ssh/auth_principals/%u
TrustedUserCAKeys {{ ssh_trusted_user_ca_key }}
{% if ssh_authorized_keys_file is defined -%}
  AuthorizedKeysFile	{{ ssh_authorized_keys_file }}
{% endif %}
#AuthorizedKeysCommand none
#AuthorizedKeysCommandUser nobody

{# =================================================================================================
#
# For this to work you will also need host keys in /etc/ssh/ssh_known_hosts
# Change to yes if you don't trust ~/.ssh/known_hosts for
#
# ================================================================================================== #}
{% if ssh_host_based_authentication is defined -%}
  HostbasedAuthentication {{ ssh_host_based_authentication }}
{% endif %}
{% if ssh_ignore_user_known_hosts is defined -%}
  IgnoreUserKnownHosts {{ ssh_ignore_user_known_hosts }}
{% endif %}
{# Don't read the user's ~/.rhosts and ~/.shosts files #}
{% if ssh_ignore_rhosts is defined -%}
  IgnoreRhosts {{ ssh_ignore_rhosts }}
{% endif %}

{# To disable tunneled clear text passwords, change to no here! #}
PasswordAuthentication {{ ssh_password_authentication }}
PermitEmptyPasswords {{ ssh_permit_empty_passwords }}

{# =================================================================================================
#
# Change to yes to enable challenge-response passwords (beware issues with
# some PAM modules and threads)
#
# ================================================================================================== #}
ChallengeResponseAuthentication {{ ssh_challenge_response_auth }}

{# Kerberos options #}
{% if ssh_kerberos_authentication is defined -%}
  #KerberosAuthentication {{ ssh_kerberos_authentication }}
{% endif %}
{% if ssh_kerberos_or_local_password is defined -%}
  #KerberosOrLocalPasswd {{ ssh_kerberos_or_local_password }}
{% endif %}
#KerberosTicketCleanup yes
#KerberosGetAFSToken no

# GSSAPI options
{% if ssh_gssapi_authentication is defined -%}
  GSSAPIAuthentication {{ ssh_gssapi_authentication }}
{% endif %}
{% if ssh_gssapi_cleanup_credentials is defined -%}
  GSSAPICleanupCredentials {{ ssh_gssapi_cleanup_credentials }}
{% endif %}
{% if ssh_gssapi_key_exchange is defined -%}
  GSSAPIKeyExchange {{ ssh_gssapi_key_exchange }}
{% endif %}
{% if ssh_gssapi_store_credentials_on_rekey is defined -%}
  GSSAPIStoreCredentialsOnRekey {{ ssh_gssapi_store_credentials_on_rekey }}
{% endif %}
{% if ssh_gssapi_strict_accept_or_check is defined -%}
  GSSAPIStrictAcceptorCheck {{ ssh_gssapi_strict_accept_or_check }}
{% endif %}

{# =================================================================================================
#
# Set this to 'yes' to enable PAM authentication, account processing,
# and session processing. If this is enabled, PAM authentication will
# be allowed through the ChallengeResponseAuthentication and
# PasswordAuthentication.  Depending on your PAM configuration,
# PAM authentication via ChallengeResponseAuthentication may bypass
# the setting of "PermitRootLogin without-password".
# If you just want the PAM account and session checks to run without
# PAM authentication, then enable this but set PasswordAuthentication
# and ChallengeResponseAuthentication to 'no'.
#
# ================================================================================================== #}
UsePAM {{ ssh_use_pam }}

#AllowAgentForwarding yes
#AllowTcpForwarding yes
#GatewayPorts no
X11Forwarding {{ ssh_x11_forwarding }}
#X11DisplayOffset 10
#X11UseLocalhost yes
#PermitTTY yes
PrintMotd {{ ssh_print_motd }}
#PrintLastLog yes
#TCPKeepAlive yes
#UseLogin no
#PermitUserEnvironment no
#Compression delayed
#ClientAliveInterval 0
#ClientAliveCountMax 3
#UseDNS {{ ssh_use_dns }}
#PidFile /var/run/sshd.pid
#MaxStartups 10:30:100
#PermitTunnel no
#ChrootDirectory none
#VersionAddendum none

# no default banner path
#Banner none

# Allow client to pass locale environment variables
AcceptEnv LANG LC_*

# override default of no subsystems
Subsystem	sftp	/usr/lib/openssh/sftp-server

